#!/usr/bin/env bash
# This script displays specific information from the /etc/passwd file.

# Specify the path to the /etc/passwd file
file_path="/etc/passwd"

# Check if the file exists
if [ -e "$file_path" ]; then
    # Use 'read' to read lines from /etc/passwd and 'cut' to extract specific fields
    while IFS=: read -r username _ userid _ _ home_directory _; do
        echo "Username: $username"
        echo "User ID: $userid"
        echo "Home Directory: $home_directory"
        echo
    done < "$file_path"
else
    echo "The file $file_path does not exist."
fi
