#!/usr/bin/env bash
# This script presents a formatted narrative based on the /etc/passwd file.

# Specify the path to the /etc/passwd file
file_path="/etc/passwd"

# Check if the file exists
if [ -e "$file_path" ]; then
    # Use 'read' to read lines from /etc/passwd and format the narrative
    while IFS=: read -r username_userid__ home_directory_; do
        echo "Username: $username"
        echo "User ID: $userid"
        echo "Home Directory: $home_directory"
        echo
    done < "$file_path"
else
    echo "The file $file_path does not exist."
fi
